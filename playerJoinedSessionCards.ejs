<% if(joinedSessions.length == 0) { %>
  <div class="flex flex-col items-center justify-center bg-orange-100 rounded-lg p-10 shadow-md">
    <svg class="h-16 w-16 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
      <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
    </svg>
    <h3 class="mt-4 text-4xl font-extrabold text-gray-900">No Sessions Joined!</h3>
    <p class="mt-2 text-lg text-gray-600">Get started by joining a new session and enjoy the game.</p>
  </div>
<% } else { %>
  <div class="bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-4xl font-extrabold text-indigo-700 mb-6">Joined Sessions</h2>
    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% for(var i=0; i<joinedSessions.length; i++) { %>
        <%- include("sessionsCard.ejs", { session: joinedSessions[i].Session, sport: joinedSessions[i].Session.Sport }) %>
      <% } %>   
    </ul>
  </div>
<% } %>
